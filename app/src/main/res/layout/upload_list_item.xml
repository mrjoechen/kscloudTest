<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dip" 
    android:background="#00000000"
    android:weightSum="6"
    android:orientation="horizontal"
    android:descendantFocusability= "blocksDescendants"
    android:baselineAligned = "false"
    >

    <LinearLayout 
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:id="@+id/file_icon_layout"
        >
        
        <ImageView
	   	 	android:id="@+id/file_icon"
	   		android:layout_width="40dip"
	    	android:layout_height="40dip"
	    	android:layout_margin="10dip"
	     />        
    </LinearLayout>
    
    
	
   
	
	<LinearLayout 
	    android:layout_width="0dip"
	    android:layout_height="wrap_content"
	    android:layout_weight="4"
	    android:id="@+id/summary_layout"
	    android:orientation="vertical"
	    android:layout_marginLeft="20dip"
	    
	    >
        
	    <LinearLayout 
	        android:id="@+id/file_name_layout"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent"
	        android:orientation="horizontal"
	        android:layout_marginTop="10dip"
	        
	        >
	         <TextView 
	    		android:id="@+id/file_name"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content"
	    		android:textSize="13sp"
        		android:textColor="#303030"
       			android:singleLine="true"
	   		 /> 
	    </LinearLayout>
	    <LinearLayout 
		    android:id="@+id/file_summary_layout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:layout_marginTop="6dip"
		    android:visibility="gone"
		    android:weightSum="5"
		    >
	        
	         <TextView 
			   	 	android:id="@+id/file_size"
			    	android:layout_width="0dip"
			    	android:layout_height="wrap_content"
			    	android:textSize="10sp"
		        	android:textColor="#708090"
		        	android:singleLine="true"
		        	android:layout_weight="1"
			    />
	        <TextView 
			   	 	android:id="@+id/file_last_modiy"
			    	android:layout_width="0dip"
			    	android:layout_height="wrap_content"
			    	android:textSize="10sp"
		        	android:textColor="#708090"
		        	android:singleLine="true"
		        	android:layout_weight="2"
			    />
	         <TextView 
			    	android:layout_width="0dip"
			    	android:layout_height="wrap_content"
		        	android:layout_weight="2"
			    />
	    </LinearLayout>
	    
	   <LinearLayout 
		    android:id="@+id/progress_summary_layout"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:layout_marginBottom="5dip"
		    android:layout_marginTop="10dip"
		    android:visibility="gone"
		      android:weightSum="4"
		    >
		    
		    <ProgressBar
			    android:id="@+id/upload_progress_bar"
			    android:layout_width="0dip"
		    	android:layout_height="match_parent"	   
		    	style="?android:attr/progressBarStyleHorizontal"
		    	android:layout_weight="2"
		     />
			
			<TextView 
			    android:id="@+id/upload_progress_txt"
			    android:layout_width="0dip"
			    android:layout_height="wrap_content"
			    android:text="0%"
			    android:textSize="10sp"
			    android:textColor="#32CD32"
			    android:layout_marginLeft="10dip"
			     android:layout_weight="2"
			    />
		    
		</LinearLayout>
	    
	</LinearLayout>
	
	<LinearLayout 
	    android:layout_width="0dip"
	    android:layout_weight="1"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    >
	    
	    <ImageView 
	        android:id="@+id/upload_btn"
	    	android:layout_height="20dip"
	    	android:layout_width="20dip"
	    	android:src="@drawable/ks_upload"
			android:layout_marginRight="5dip"
	    	android:background="#00000000"
	    	android:focusable = "false"
	    />
	    
	    
	</LinearLayout>	
	
	
	
	
	

</LinearLayout>
